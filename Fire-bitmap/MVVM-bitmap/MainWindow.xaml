<Window x:Class="MVVM_bitmap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_bitmap"
        mc:Ignorable="d"
        Title="Fire bitmap drawing" Height="450" Width="400">

    <Grid>
        <StackPanel Margin="5,5,10,5">
            <WrapPanel >
                <Button x:Name="btnStart" Content="Start" Height="30" Width="100"
                        Command="{Binding StartCommand}"/>
            </WrapPanel>
            <Image Source="{Binding ButtonSource}" Height="380" Width="780"/>
        </StackPanel>
    </Grid>
</Window>
