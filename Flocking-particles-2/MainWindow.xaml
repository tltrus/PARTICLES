<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Flocking particles" Height="500" Width="630">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="5" Width="108" Click="BtnStart_Click"/>
                <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Height="40" Margin="5" VerticalAlignment="Top" Width="108" Click="BtnStop_Click"/>
                <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Height="40" Margin="5" VerticalAlignment="Top" Width="108" Click="BtnReset_Click"/>
            </WrapPanel>
            <local:DrawingVisualClass x:Name="g" Background="Black" Margin="5" HorizontalAlignment="Center" Width="600" Height="400" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
